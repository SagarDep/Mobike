<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TV正常状态下的背景 -->
    <item android:drawable="@drawable/tv_bg_normal" android:state_pressed="false"/>
    <!-- TV按下时的背景 -->
    <item android:drawable="@drawable/tv_bg_pressed" android:state_accelerated="true"/>
    <item android:drawable="@drawable/tv_bg_pressed" android:state_pressed="true"/>
    <item android:drawable="@drawable/tv_bg_pressed" android:state_focused="true"/>
</selector>