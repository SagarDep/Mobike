<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.pay.DepositRefundIssueActivity">

    <com.yiwen.mobike.views.TabTitleView
        android:id="@+id/title_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="客户服务"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:text="押金超过7个工作日还未到账"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <include layout="@layout/divider"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:text="1.选择支付渠道"
        android:textColor="@color/black"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_weixin"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/red"
            android:clickable="true"
            android:tag="0"
            android:gravity="center"
            android:text="微信支付"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/id_tv_alipay"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:tag="1"
            android:background="@color/bg_color"
            android:clickable="true"
            android:gravity="center"
            android:text="支付宝"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:text="2.请上传你的支付订单截屏，确保订单号清晰可见："
        android:textColor="@color/black"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/id_iv_pick"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:clickable="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/report_violation_default"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:text="3.填写支付订单号："
        android:textColor="@color/black"
        android:textSize="12sp"/>
    <com.yiwen.mobike.views.ClearEditText
        android:id="@+id/et_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="@color/bg"
        android:padding="15dp"
        android:hint="支付订单号"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/id_tv_findorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="end"
        android:clickable="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:text="订单号查询办法"
        android:textColor="@color/red"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/id_tv_query"
        android:text="提交"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/white"
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
</LinearLayout>
