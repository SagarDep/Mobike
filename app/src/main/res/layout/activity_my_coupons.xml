<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.yiwen.mobike.activity.usercenter.MyCreditActivity">

    <com.yiwen.mobike.views.TabTitleView
        android:id="@+id/title_coupons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightText="使用帮助"
        app:showRightTextView="true"
        app:titleText="我的优惠"/>

    <EditText
        android:id="@+id/et_coupons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg"
        android:visibility="gone"
        android:gravity="center"
        android:padding="8dp"
        android:maxLines="1"
        android:hint="请输入的的兑换码"
        android:textColorHint="@color/gray"/>
    <Button
        android:id="@+id/bt_coupons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@color/red"
        android:text="优惠码兑换"
        android:visibility="visible"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_coupons"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
