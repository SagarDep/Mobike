<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.usercenter.MyCreditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <com.yiwen.mobike.views.TabTitleView
            android:id="@+id/title_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rightText="红包明细"
            app:showRightTextView="true"
            app:titleText="红包"/>
<LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_tv_pockey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/red"
            android:textSize="35sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="元"
        android:textColor="@color/red"
        android:textSize="10sp"/>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_red"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="余额超过10元可以提现，今天你可以提现1次"
            android:textColor="@color/smssdk_gray"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/id_tv_gonlv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_red"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="红包攻略"
            android:textColor="@color/red"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/person_riding_bike"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button

            android:id="@+id/id_bt_takemoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/id_tv_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:clickable="true"
            android:gravity="center"
            android:text="常见问题"
            android:textColor="@color/red"/>
    </LinearLayout>

</RelativeLayout>